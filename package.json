{
	"name": "movielog",
	"version": "0.0.1",
	"description": "A log for movies and tv shows.",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf dist/",
		"devServer:dev": "webpack-dev-server --mode=development",
		"devServer:prod": "webpack-dev-server --mode=production",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"build:dev": "webpack --mode=development",
		"build:prod": "webpack --mode=production",
		"pretty": "prettier --config ./prettier.config.js --write \"**/*.{ts,tsx}\""
	},
	"keywords": [
		"react",
		"movie",
		"tv",
		"show",
		"log",
		"omdb"
	],
	"author": "Markus Willems <mail@markus-willems.de>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.3.1",
		"@babel/preset-react": "^7.0.0",
		"@babel/preset-typescript": "^7.1.0",
		"@types/jest": "^24.0.0",
		"@types/node": "^10.12.24",
		"@types/react": "^16.8.2",
		"@types/react-dom": "^16.8.0",
		"@types/react-router-dom": "^4.3.1",
		"babel-loader": "^8.0.5",
		"css-loader": "^2.1.0",
		"dotenv-webpack": "^1.7.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^1.3.1",
		"jest": "^24.1.0",
		"lint-staged": "^8.1.3",
		"mini-css-extract-plugin": "^0.5.0",
		"node-sass": "^4.11.0",
		"prettier": "^1.16.4",
		"react-hot-loader": "^4.6.5",
		"react-testing-library": "^5.5.4",
		"rimraf": "^2.6.3",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"ts-jest": "^23.10.5",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^3.6.0",
		"typescript": "^3.3.3",
		"webpack": "^4.29.3",
		"webpack-cli": "^3.2.3",
		"webpack-dev-server": "^3.1.14"
	},
	"dependencies": {
		"normalize.css": "^8.0.1",
		"react": "^16.8.1",
		"react-dom": "^16.8.1",
		"react-router-dom": "^4.3.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run pretty"
		}
	},
	"lint-staged": {
		"*.*": [
			"npm run pretty",
			"git add"
		]
	}
}
